{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./app.js"
      },
      {
        "type": "style",
        "src": "./app.css"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "EagerReadingTime.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "wordsPerMinute": {
        "title": "Words Per Minute",
        "type": "integer",
        "default": 250
      },
      "visibleDuration": {
        "title": "Visible Duration (milliseconds)",
        "type": "integer",
        "default": 800
      },
      "element": {
        "title": "Location",
        "description": "Where would you like the view counter to appear?",
        "order": 1,
        "type": "object",
        "format": "element",
        "default": {
          "selector": ".article-body__content",
          "method": "before"
        }
      }
    }
  }
}
